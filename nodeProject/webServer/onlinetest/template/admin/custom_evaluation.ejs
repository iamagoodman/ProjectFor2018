<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Title</title>
</head>
<body>
    <%- include('components/top.inc.ejs') %>
    <div class="cont-warp">
        <form action="?" method="post" enctype="multipart/form-data">
            标题：<input type="text" name="title"><br>
            描述：<input type="text" name="description"><br>
            头像：<input type="file" name="f1"><br>
            <input type="submit" value="添加">
        </form>

        <table>
            <theader>
                <th>ID</th>
                <th>标题</th>
                <th>描述</th>
                <th>头像</th>
                <th>操作</th>
            </theader>
            <tbody>
                <% for(var i=0;i<evaluations.length;i++){ %>
                <tr>
                    <td><%= evaluations[i].ID %></td>
                    <td><%= evaluations[i].title %></td>
                    <td><%= evaluations[i].description %></td>
                    <td>
                        <img style="width: 100px" src="/upload/<%= evaluations[i].src %>" alt="头像">
                    </td>
                    <td>
                        <a href="?act=del&id=<%= evaluations[i].ID %>">删除</a>
                        <a href="?act=mod&id=<%= evaluations[i].ID %>">修改</a>
                    </td>
                </tr>
                <% } %>
            </tbody>
            <% if(typeof mod_data!='undefined'){ %>
                <div style="position: fixed;top: 0;left: 0;right: 0;bottom: 0;background: whitesmoke">
                </div>
                <div style="position: fixed;top: 20%;left: 50%;right: 50%">
                    <form action="?" method="post" enctype="multipart/form-data">
                        标题：<input type="text" name="title" value="<%= mod_data.title %>"><br>
                        描述：<input type="text" name="description" value="<%= mod_data.description %>"><br>
                        头像：<img style="width: 100px;" src="/upload/<%= mod_data.src %>" alt="头像"><br>
                        替换头像: <input type="file" name="f1"><br>
                        <input type="hidden" name="mod_id" value="<%= mod_data.ID %>">
                        <input type="submit" value="提交">
                        <a href="/admin/custom_evaluation">取消修改</a>
                    </form>
                </div>
            <% } %>
        </table>






    </div>
</body>
</html>